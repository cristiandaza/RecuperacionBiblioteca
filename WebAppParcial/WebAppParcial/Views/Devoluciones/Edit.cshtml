@model WebAppParcial.Models.Devolucion

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Devolucion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DevolucionID" />
            <div class="form-group">
                <label asp-for="PrestamoID" class="control-label"></label>
                <select asp-for="PrestamoID" class="form-control" asp-items="ViewBag.PrestamoID"></select>
                <span asp-validation-for="PrestamoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary"><i class="fas fa-backward">Atrás</i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
