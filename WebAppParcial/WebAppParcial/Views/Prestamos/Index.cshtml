@model IEnumerable<WebAppParcial.Models.Prestamo>

@{
    ViewData["Title"] = "Index";
}

<h1>Prestamos</h1>

<p>
    <a asp-action="Create"><button class="btn btn-primary">Nuevo</button></a></p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Libro.LibroID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.UsuarioID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrestamoID" class="btn btn-success">Editar<i class="fas fa-edit"></i></a>
                <a asp-action="Details" asp-route-id="@item.PrestamoID"class="btn btn-warning">Detalles<i class="fas fa-th-list"></i></a>
                <a asp-action="Delete" asp-route-id="@item.PrestamoID"class="btn btn-danger">Eliminar<i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
